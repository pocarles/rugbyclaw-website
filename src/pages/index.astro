---
const title = "RugbyClaw — Rugby Scores CLI for Top 14, Premiership & More";
const description = "Track live rugby scores, fixtures, and results from your terminal or AI assistant. Covers Top 14, Premiership, Six Nations, Champions Cup & 10+ leagues. Free & open source.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="rugbyclaw, rugby scores, rugby CLI, rugby terminal, Top 14, Premiership, Six Nations, rugby fixtures, live rugby scores">
    <link rel="canonical" href="https://rugbyclaw.com/">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="nav">
        <div class="nav-container">
            <a href="/" class="logo">
                <span class="logo-mark">RC</span>
                RugbyClaw
            </a>
            <div class="nav-links">
                <a href="#features">Features</a>
                <a href="#leagues">Leagues</a>
                <a href="/docs">Docs</a>
                <a href="#install">Install</a>
                <a href="https://github.com/pocarles/rugbyclaw" class="btn btn-outline" target="_blank" rel="noopener">
                    GitHub
                </a>
            </div>
        </div>
    </nav>

    <!-- Hero -->
    <header class="hero">
        <div class="hero-content">
            <div class="hero-badge">Open Source CLI Tool</div>
            <h1>Rugby scores<br>in your terminal.</h1>
            <p class="hero-subtitle">
                Track live scores, fixtures, and results for Top 14, Premiership, Six Nations, 
                and 10+ more competitions. Works standalone or with your AI assistant.
            </p>
            <div class="hero-cta">
                <div class="install-command">
                    <code>npm install -g rugbyclaw</code>
                </div>
                <a href="#install" class="btn btn-primary">Get Started →</a>
            </div>
        </div>
    </header>

    <!-- Features -->
    <section id="features" class="features">
        <div class="section-header">
            <h2>Everything a rugby fan needs</h2>
            <p>Built for fans who live and breathe the game.</p>
        </div>
        <div class="features-grid">
            <div class="feature-card">
                <h3>Live Scores</h3>
                <p>Real-time scores and match updates across all major leagues.</p>
            </div>
            <div class="feature-card">
                <h3>Fixtures & Results</h3>
                <p>Upcoming matches and recent results. Never miss a game.</p>
            </div>
            <div class="feature-card">
                <h3>Team Tracking</h3>
                <p>Follow your favorite teams and get their schedule.</p>
            </div>
            <div class="feature-card">
                <h3>Calendar Export</h3>
                <p>Export matches to your calendar app (.ics format).</p>
            </div>
        </div>
    </section>

    <!-- Leagues -->
    <section id="leagues" class="leagues">
        <h2>13+ Leagues Supported</h2>
        <div class="leagues-grid">
            <div class="league-badge">Top 14</div>
            <div class="league-badge">Premiership</div>
            <div class="league-badge">URC</div>
            <div class="league-badge">Champions Cup</div>
            <div class="league-badge">Six Nations</div>
            <div class="league-badge">Pro D2</div>
            <div class="league-badge">Super Rugby</div>
            <div class="league-badge">Rugby Championship</div>
        </div>
    </section>

    <!-- Install -->
    <section id="install" class="install-section">
        <h2>Quick Start</h2>
        <div class="install-steps">
            <div class="step">
                <h3>1. Install</h3>
                <code>npm install -g rugbyclaw</code>
            </div>
            <div class="step">
                <h3>2. Configure</h3>
                <code>rugbyclaw config</code>
            </div>
            <div class="step">
                <h3>3. Use it</h3>
                <code>rugbyclaw scores</code>
            </div>
        </div>
        <p><a href="/docs/getting-started">Read the full documentation →</a></p>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>Built by <a href="https://pocarles.com" target="_blank">Pierre-Olivier Carles</a></p>
        <p><a href="https://github.com/pocarles/rugbyclaw">Open Source</a> • <a href="/docs">Documentation</a></p>
    </footer>
</body>
</html>
